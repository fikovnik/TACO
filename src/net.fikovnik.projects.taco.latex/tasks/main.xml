<?xml version="1.0" encoding="UTF-8"?>
<project default="main" name="net.fikovnik.projects.taco.latex">
    <property name="ECLIPSE_HOME" value="../../../../../../Applications/Eclipse-ACTRESS"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../../../Development/workspaces/TACO"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="net.fikovnik.projects.taco.latex.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/net.fikovnik.projects.taco.latex/bin"/>
    </path>

    <path id="net.fikovnik.projects.taco.latex.classpath">
        <path refid="net.fikovnik.projects.taco.latex.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="net.fikovnik.projects.taco.latex.libraryclasspath.alljars">
        <pathelement location="../net.fikovnik.projects.taco.latex/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="net.fikovnik.projects.taco.latex.classpath.alljars">
        <path refid="net.fikovnik.projects.taco.latex.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="main">
        <java classname="net.fikovnik.projects.taco.latex.main.Main" classpathref="net.fikovnik.projects.taco.latex.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="main.alljars">
        <java classname="net.fikovnik.projects.taco.latex.main.Main" classpathref="net.fikovnik.projects.taco.latex.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
